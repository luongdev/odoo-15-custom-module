<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mesocials.Message" owl="1">
        <div class="o_Message pt-1 d-flex mb-2" t-att-class="{ 'justify-content-end': fromAgent}">
            <div class="o_Message_core d-flex flex-column pl-4 pr-4">
                <div class="o_Message_header ml-2 row">
                    <div class="o_Message_authorName o_Message_authorRedirect o_redirect text-truncate">
                        <t t-esc="senderName"/>
                    </div>
                    <div class="o_Message_date o_Message_headerDate">
                        - <t t-esc="messageTime"/>
                    </div>
                </div>
                <div class="o_Message_content mx-2 row">
                    <p t-esc="text"/>
                </div>
            </div>
        </div>
    </t>
</templates>
